#!/bin/bash
app=btsync_docker

# Remove NGINX conf
username=$(sudo yunohost app setting $app user)
domain=$(sudo yunohost app setting $app domain)
conteinername=$app'_'$username
sudo rm /etc/nginx/conf.d/$domain.d/$conteinername.conf

# Remove container
sudo python remove_container.py $username
sudo rm -rf /home/yunohost.docker/container-$app/config

# Reload
sudo service nginx reload
sudo yunohost app ssowatconf 
